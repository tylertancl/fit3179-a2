{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Sports That Awarded the Most Medals",
    "anchor": "start"
  },
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/rfordatascience/tidytuesday/master/data/2021/2021-07-27/olympics.csv"
  },
  "transform": [
    {"filter": "datum.medal != 'NA'"}
  ],
  "mark": "rect",
  "encoding": {
    "y": {"field": "sport", "type": "nominal", "title": "Sport"},
    "x": {"field": "sex", "type": "nominal", "title": "Gender"},
    "color": {
      "aggregate": "count",
      "type": "quantitative",
      "title": "Medal Count"
    },
    "tooltip": [
      {"field": "sport", "type": "nominal", "title": "Sport"},
      {"field": "sex", "type": "nominal", "title": "Gender"},
      {"aggregate": "count", "type": "quantitative", "title": "Total Medals"}
    ]
  },
  "config": {
    "axis": {"grid": true, "tickBand": "extent"}
  }
}
