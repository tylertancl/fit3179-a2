{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Olympic Medals by Country",
  "width": 800,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://vega.github.io/vega-lite/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {"type": "geoshape", "fill": "#eee", "stroke": "#ccc"}
    },
    {
      
      "data": {
        "url": "https://vega.github.io/vega-lite/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [
        {
          "calculate": "datum.properties && datum.properties.name ? datum.properties.name : datum.name",
          "as": "name_raw"
        },
        {"calculate": "replace(datum.name_raw, 'United States', 'United States of America')", "as": "name_norm"},
        {"calculate": "replace(datum.name_norm, 'Russia', 'ROC')", "as": "name_norm"},
        {"calculate": "replace(datum.name_norm, 'Taiwan', 'Chinese Taipei')", "as": "name_norm"},
        {"calculate": "replace(datum.name_norm, 'Iran', 'Islamic Republic of Iran')", "as": "name_norm"},
        {"calculate": "replace(datum.name_norm, 'South Korea', 'Republic of Korea')", "as": "name_norm"},
        {
          "lookup": "name_norm",
          "from": {
            "data": {"url": "data/medals_total.csv", "format": {"type": "csv"}},
            "key": "Country",
            "fields": ["Gold Medal", "Silver Medal", "Bronze Medal", "Total"]
          }
        },
        {"calculate": "toNumber(datum['Gold Medal'])", "as": "GoldNum"},
        {"calculate": "toNumber(datum['Silver Medal'])", "as": "SilverNum"},
        {"calculate": "toNumber(datum['Bronze Medal'])", "as": "BronzeNum"},
        {"calculate": "isValid(datum.Total) ? toNumber(datum.Total) : (datum.GoldNum + datum.SilverNum + datum.BronzeNum)", "as": "TotalMedalsNum"},
        {"filter": "isFinite(datum.TotalMedalsNum)"}
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {"field": "TotalMedalsNum", "type": "quantitative", "scale": {"scheme": "blues"}, "title": "Total medals"},
        "tooltip": [
          {"field": "name_norm", "title": "Country"},
          {"field": "TotalMedalsNum", "title": "Total medals"},
          {"field": "GoldNum", "title": "Gold"},
          {"field": "SilverNum", "title": "Silver"},
          {"field": "BronzeNum", "title": "Bronze"}
        ]
      }
    }
  ]
}