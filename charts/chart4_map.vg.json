{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 520,
  "background": "#ffffff",
  "projection": { "type": "naturalEarth1" },

  "layer": [
    {
      "data": { "sphere": true },
      "mark": {
        "type": "geoshape",
        "fill": "#dbe9f4",       
        "stroke": null
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tylertancl/fit3179-a2/main/data/map_base.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#c0c0c0",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tylertancl/fit3179-a2/main/data/map_base.json",
        "format": { "type": "topojson", "feature": "custom.geo" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#eeeeee",         
        "stroke": "#aaaaaa",
        "strokeWidth": 0.3
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tylertancl/fit3179-a2/main/data/map_base.json",
        "format": { "type": "topojson", "feature": "custom.geo" }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/tylertancl/fit3179-a2/main/data/medals_total.csv",
              "format": { "type": "csv" }
            },
            "key": "Country",
            "fields": ["Total", "Gold Medal", "Silver Medal", "Bronze Medal"]
          }
        },
        { "calculate": "toNumber(datum.Total)", "as": "TotalNum" },
        { "calculate": "toNumber(datum['Gold Medal'])", "as": "GoldNum" },
        { "calculate": "toNumber(datum['Silver Medal'])", "as": "SilverNum" },
        { "calculate": "toNumber(datum['Bronze Medal'])", "as": "BronzeNum" },
        {
          "joinaggregate": [
            { "op": "sum", "field": "TotalNum", "as": "GrandTotal" }
          ]
        },
        {
          "calculate": "datum.GrandTotal > 0 && isValid(datum.TotalNum) ? (datum.TotalNum / datum.GrandTotal) * 100 : null",
          "as": "Percentage"
        },
        { "filter": "isValid(datum.Percentage) && datum.Percentage > 0" }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#ffffff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Percentage",
          "type": "quantitative",
          "title": "Share of total medals (%)",
          "scale": { "scheme": "blues" },
          "legend": {
            "titleColor": "#000000",
            "labelColor": "#000000",
            "format": ".2f",
            "orient": "right",
            "direction": "vertical",
            "offset": 10,
            "titleFontSize": 15,
            "labelFontSize": 16,
            "symbolSize": 240
          }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "Country" },
          { "field": "GoldNum", "type": "quantitative", "title": "Gold" },
          { "field": "SilverNum", "type": "quantitative", "title": "Silver" },
          { "field": "BronzeNum", "type": "quantitative", "title": "Bronze" },
          { "field": "TotalNum", "type": "quantitative", "title": "Total Medals" },
          {
            "field": "Percentage",
            "type": "quantitative",
            "title": "% of Total",
            "format": ".2f"
          }
        ]
      }
    }
  ],

  "config": {
    "legend": {
      "labelFontSize": 16,
      "titleFontSize": 18,
      "gradientLength": 160,
      "symbolSize": 240
    }
  }
}
